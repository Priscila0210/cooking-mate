<div class="container mt-4">

  <h1 class="mt-2" id="color">Hello <%= current_user.nickname %>!</h1>

  <div class="accordion accordion-flush" id="accordionFlushExample">
    <div class="accordion-item">
      <h2 class="accordion-header" id="flush-headingOne">
        <button id="color" id="messages" class="accordion-button <%= params[:session]=="messages" ? "" : "collapsed" %>" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="<%= params[:session]=="messages" ? "true" : "false" %>" aria-controls="flush-collapseOne">
          My future dates
        </button>
      </h2>
      <div id="flush-collapseOne" class="accordion-collapse <%= params[:session]=="messages" ? "collapse show" : "collapse" %>" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
        <div class="accordion-body">
        <%= render "recipes/mydates" %>
      </div>
    </div>

    <div class="accordion-item">
      <h2 class="accordion-header" id="flush-headingTwo">
          <button id="color" id="recipes" class="accordion-button <%= params[:session]=="recipes" ? "" : "collapsed" %>" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="<%= params[:session]=="recipes" ? "true" : "false" %>" aria-controls="flush-collapseTwo">
            My recipes
          </button>
      </h2>
      <div id="flush-collapseTwo" class="accordion-collapse <%= params[:session]=="recipes" ? "collapse show" : "collapse" %>" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
        <div class="accordion-body">

        <%= render 'recipes/myrecipes', locals: { user: @user } %>
        </div>
        <%= render "recipes/form", recipe: @recipe %>
      </div>
    </div>

    <div class="accordion-item">
      <h2 class="accordion-header" id="flush-headingThree">
        <button id="color" class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
          My requests
        </button>
      </h2>
      <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
        <div class="accordion-body">
        <%= render "recipes/myrequests" %>
        </div>
      </div>
    </div>

    <div class="accordion-item">
      <h2 class="accordion-header" id="flush-headingFour">
        <button id="color" class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseFour" aria-expanded="false" aria-controls="flush-collapseFour">
          My invitations
        </button>
      </h2>
      <div id="flush-collapseFour" class="accordion-collapse collapse" aria-labelledby="flush-headingFour" data-bs-parent="#accordionFlushExample">
        <div class="accordion-body">
          <%= render "recipes/myinvitations" %>
        </div>
      </div>
    </div>
  </div>
</div>
