<%= simple_form_for [current_user, recipe] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :length %>
    <%= f.input :description %>
     <%= f.input :cuisine, collection: Cuisine.all %>
      <%= f.input :level_of_difficulty, collection: ['easy', 'medium', 'hard']%>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary btn-block border border-dark rounded-pill" %>
  </div>
   </div>
<% end %>
