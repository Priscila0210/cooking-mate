
<div class="booking-list">
  <% @my_requests.not_declined.each do |booking| %>
    <div class="booking-card">
      <h4 class="booking-status m-2"><strong><%= booking.user.nickname %></strong> would like to cook <strong><%= booking.recipe.title %></strong></h4>
      <h4 class="booking-status m-2"><strong> on:</strong> <%= booking.date %></h4>
      <div class="d-flex justify-content-around align-items-center">
        <% if booking.status == 'pending' %>
          <%= link_to "Accept" , accepted_path(booking),class: "btn btn-sm btn-ghost-solid", data: { turbo_method: :patch } %>
          <%= link_to "Decline", declined_path(booking),class: "btn btn-sm btn-ghost-solid", data: { turbo_method: :patch } %>
        <% end %>
      </div>
      <div class="text-center">
        <% if booking.accepted? %>
          <%= link_to "open a chat", chatroom_path(booking.chatroom), class: "btn btn-sm btn-ghost-solid"%>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if @my_requests.not_declined.empty? %>
    Don't worry, your cooking mate is on its way!
  <% end %>
</div>



