<% else %>

    <div class="row justify-content-center" data-controller="search">
    <div class="col-sm-8 my-3" >
      <%= form_with url: recipes_path, method: :get, html: {class: "d-flex", data: {search_target: "form"}} do %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Look for your recipes, ingredients, cuisines, diets ....",
            data: {
              search_target: "input",
              action: "keyup->search#update"
              }
        %>
        <%= submit_tag "Search", name: "", class: "btn btn-ghost" %>
      <% end %>
      <div data-action="click->search#filter" data-search-target="button">
        <button class="btn btn-ghost">Vegetarian</button>
        <button class="btn btn-ghost">Italian</button>
        <button class="btn btn-ghost">American</button>
        <button class="btn btn-ghost">Pumpkin</button>
    </div>
      <% if !@recipes_result.empty?  %>
