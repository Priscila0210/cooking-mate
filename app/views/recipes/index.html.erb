<% else %>

  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: recipes_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,

            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>

        <%= submit_tag "Search", name: "", class: "btn btn-ghost" %>

      <% end %>
    </div>
    <div class="cards-container">
      <% @recipes.each do |recipe| %>
        <div class="card mt-5">

          <%= cl_image_tag recipe.title, height: 120, width: "100%"  %>
          <h5 class="card-title"><%= recipe.title %></h5>
          <div class="d-flex align-items-center justify-content-between my-2 w-100">
              <%= link_to profile_path(recipe.user) do %>
                  <%= cl_image_tag "https://res.cloudinary.com/dzltofqgu/image/upload/c_thumb,w_200,g_face/v1693286262/samples/woman-on-a-football-field.jpg", width: 35, height: 35 %>
                  <%# <%= cl_image_tag "https://res.cloudinary.com/dzltofqgu/image/upload/w_1000,c_fill,ar_1:1,g_auto,r_max/v1693286262/samples/woman-on-a-football-field.jpg", width: 35, height: 35 %>
              <% end %>
              <% bookings = @prior_bookings.where(recipe: recipe, user: current_user) %>
                <% if bookings.count == 0 %>
                    <button type="button" class="btn btn-sm btn-ghost" data-bs-toggle="modal" data-bs-target="#booking-<%= recipe.id %>">
                      book
                    </button>
                <% else %>
                  <%= render "shared/card", recipe: recipe %>
                <% end %>
          </div>
        </div>
        <%= render "booking", recipe: recipe, booking: @booking %>
      <% end %>
    </div>

  </div>
<% end %>


