
<title>Create Your Account</title>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-lg">
          <div class="card-body p-5">
            <h2 class="card-title text-center mb-4">Sign Up</h2>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'mt-4' }) do |f| %>
              <%= f.error_notification class: 'alert alert-danger' %>
              <div class="form-group">
                <%= f.input :email,
                            placeholder: 'name@email.com',
                            required: true,
                            autofocus: true,
                            label: 'Email',
                            label_html: { class: 'form-label' },
                            input_html: { class: 'form-control', autocomplete: 'email' } %>
              </div>
              <div class="form-group">
                <%= f.input :password,
                            required: true,
                            label: 'Password',
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            label_html: { class: 'form-label' },
                            input_html: { class: 'form-control', autocomplete: 'new-password' } %>
              </div>
              <div class="form-group">
                <%= f.input :password_confirmation,
                            required: true,
                            label: 'Confirm Password',
                            label_html: { class: 'form-label' },
                            input_html: { class: 'form-control', autocomplete: 'new-password' } %>
              </div>
              <div class="form-group">
                <%= f.input :nickname,
                            placeholder: 'your name on cooking mate',
                            required: true  %>
              </div>
              <div class="form-group">
                 <%= f.input :address,
                            required: true,
                            input_html: { autocomplete: "address" } %>
              </div>
              <div class="form-group">
                <%= f.input :age, collection: 18..60,
                            prompt: "Select your age",
                            required: true  %>
              </div>
              <div class="form-group">
               <%= f.input :interested_in, collection: ["only friends", "open to anything"],
                            required: true  %>
              </div>
              <div class="form-group">
                <%= f.input :cooking_level, collection: ["beginner", "some experience", "advanced"],
                            required: true  %>
              </div>
              <div class="form-group">
                <%= f.input :availability, collection: ["weekdays", "weekends"],
                            required: true,
                            input_html: { multiple: true },
                            wrapper_html: { class: 'form-group' }, :as => :check_boxes, include_hidden: false  %>
              </div>
              <div class="form-group">
               <%= f.input :description,
                          placeholder: 'Type here',
                          required: true  %>
              </div>
              <div class="text-center mt-4">
                <%= f.button :submit, "Sign up", class: 'btn btn-primary btn-lg' %>
              </div>
            <% end %>
            <div class="text-center mt-3">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>