<title>Sign Up</title>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-lg">
          <div class="card-body p-5">
            <h2 class="card-title text-center mb-4">Sign Up</h2>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'mt-4' }) do |f| %>
              <%= f.error_notification class: 'alert alert-danger' %>
              <div class="form-group">
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            label: 'Email',
                            label_html: { class: 'form-label' },
                            input_html: { class: 'form-control', autocomplete: 'email' } %>
              </div>
              <div class="form-group">
                <%= f.input :password,
                            required: true,
                            label: 'Password',
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            label_html: { class: 'form-label' },
                            input_html: { class: 'form-control', autocomplete: 'new-password' } %>
              </div>
              <div class="form-group">
                <%= f.input :password_confirmation,
                            required: true,
                            label: 'Confirm Password',
                            label_html: { class: 'form-label' },
                            input_html: { class: 'form-control', autocomplete: 'new-password' } %>
              </div>
              <div class="text-center mt-4">
                <%= f.button :submit, "Sign up", class: 'btn btn-primary btn-lg' %>
              </div>
            <% end %>
            <div class="text-center mt-3">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
