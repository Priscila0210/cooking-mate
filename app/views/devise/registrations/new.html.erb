<h2>Create your account</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                placeholder: 'youremail@domain.com',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :nickname,
                placeholder: 'your name on cooking mate',
                required: true  %>
    <%= f.input :address,
                required: true,
                input_html: { autocomplete: "address" } %>
    <%= f.input :age, collection: 18..60,
                prompt: "Select your age",
                required: true  %>
    <%= f.input :interested_in, collection: ["only friends", "open to anything"],
                required: true  %>
    <%= f.input :cooking_level, collection: ["beginner", "some experience", "advanced"],
                required: true  %>
    <%= f.input :availability, collection: ["weekdays", "weekends"],
                required: true,
                input_html: { multiple: true },
                wrapper_html: { class: 'form-group' }, :as => :check_boxes, include_hidden: false  %>
    <%= f.input :description,
                placeholder: 'Type here',
                required: true  %>


  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create my account" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
